rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Vehicles collection
    match /vehicles/{vehicleId} {
      allow read: if true; // ðŸ‘ˆ anyone can see vehicles
      allow create, update, delete: if request.auth != null
        && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
        // ðŸ‘† only users whose UID exists in /admins collection can add/remove
    }

    // Admins collection
    match /admins/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // ðŸ‘† each admin can only read/write their own admin doc
    }
    
    match /users/{userId}/favorites/{favId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // âœ… logged-in user can only read/write their own document
    }
  }
}
